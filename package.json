{
  "name": "my-turborepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "predev": "pnpm --filter @repo/store exec bunx prisma migrate status || pnpm run db:deploy",
    "dev": "turbo run dev",
    "db:migrate": "pnpm --filter @repo/store prisma:migrate",
    "db:deploy": "pnpm --filter @repo/store prisma:deploy",
    "db:studio": "pnpm --filter @repo/store prisma:studio",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@vitest/coverage-v8": "^4.0.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.1",
    "typescript": "5.9.2",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
